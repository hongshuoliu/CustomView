<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_custom_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.liu.custom.customview.CustomViewActivity">

    <com.liu.custom.customview.wight.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:circle_border="2dp"
        app:circle_border_color="#00ff00"
        android:src="@mipmap/girl"/>

    <com.liu.custom.customview.wight.RoundRectImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rect_border="2dp"
        app:rect_border_color="#ff0000"
        app:rect_radiux="10dp"
        app:rect_radiuy="10dp"
        android:src="@mipmap/girl"/>

</LinearLayout>
